@{
    ViewBag.Title = "Invoice Details";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    
                    <div class="col-12 col-sm-6 col-md-8">
                        <div class="card">
                            <div class="card-body" style="min-height:175px;">
                                <table style="border-collapse: unset;font-size:18px;">
                                    <tr>
                                        <td style="min-width:140px;">Invoice No. :</td>
                                        <td><b>INV-00001</b></td>
                                    </tr>
                                    <tr>
                                        <td>Entrepreneur :</td>
                                        <td><b>Diaman Group of Companies</b></td>
                                    </tr>
                                    <tr>
                                        <td>Debtor :</td>
                                        <td><b>Exact Software</b></td>
                                    </tr>
                                    <tr>
                                        <td>Debtor Rating :</td>
                                        <td><b>A</b></td>
                                    </tr>
                                </table>                               
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h3 class="text-info fw-bold" style="font-size: 25px;">RM 10,000.00</h3>
                                                <h5>funded of <b>RM 15,000.00</b></h5>
                                            </div>

                                        </div>
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-info w-75" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-between mt-2">
                                            <p class="text-muted mb-0">Change</p>
                                            <p class="text-muted mb-0">75%</p>
                                        </div>
                                        <div class="d-flex justify-content-between mt-2">
                                            <p class="text-muted mb-0">Investors</p>
                                            <p class="text-muted mb-0">13</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="basic-url">Amount</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">RM</span>
                                        </div>
                                        <input type="text" class="form-control" aria-label="Amount">
                                        <div class="input-group-append">
                                            <span class="input-group-text">.00</span>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary" style="width:100%;">Fund Invoice</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
